      <jobs>
          <get_kissmetrics_view>
              <schedule><cron_expr>*/2 * * * *</cron_expr></schedule>
              <run><model>kissmetrics/observer::cacheFeeds</model></run>
          </get_kissmetrics_view>
      </jobs>
  </crontab>-->
</config>