<?xml version="1.0"?>
<config>
    <tabs>
	<arush translate="label" module="kissmetrics">
	    <label>Arush</label>
	    <sort_order>150</sort_order>
	</arush>
    </tabs>
    <sections>
        <kissmetrics translate="label comment" module="kissmetrics">
            <tab>arush</tab>
            <label>Kissmetrics</label>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                
                <track translate="label comment" module="kissmetrics">
                    <label>Kissmetrics Code</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <kissmetrics_on translate="label">
                            <label>Kissmetrics On</label>
                            <frontend_type>select</frontend_type>
            			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </kissmetrics_on>
            			<kissmetrics_code translate="label">
                            <label>Kissmetrics Javascript Library</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Paste it from kissmetrics.com setup]]></comment>
                        </kissmetrics_code>
                        
                    </fields>
                </track>
            </groups>
        </kissmetrics>
    </sections>
</config>
