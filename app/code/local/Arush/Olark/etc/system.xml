<?xml version="1.0"?>
<config>
    <tabs>
	<arush translate="label" module="olark">
	    <label>Arush</label>
	    <sort_order>100</sort_order>
	</arush>
    </tabs>
    <sections>
        <olark translate="label comment" module="olark">
            <tab>arush</tab>
            <label>Olark</label>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                
                <chat translate="label comment" module="olark">
                    <label>Olark Chat</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <olark_on translate="label">
                            <label>Olark On</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will place the code in all pages just before last body tag]]></comment>
                        </olark_on>
			<olark_code translate="label">
                            <label>Olark Code</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Never include the visitor insights code snippets here]]></comment>
                        </olark_code>
			<olark_name translate="label">
                            <label>Add user's name and email address to your IM list?</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will tag visitors by their Magento registered firstname + email address (e.g. Fred Wilson fred@avc.com)]]></comment>
                        </olark_name>
			
			<olark_paymentpage translate="label">
                            <label>Tag user if they are on the checkout page?</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will tag visitors if they are on the checkout pages (recommended)]]></comment>
                        </olark_paymentpage>
                        
                        
                    </fields>
                </chat>
            </groups>
        </olark>
    </sections>
</config>
