<?xml version="1.0"?>
<widgets>
    <randomquote type="randomquote/randomquote">
        <name>Random Quote</name>
        <description type="desc">Adds a random quote to the page</description>
		<parameters>
            <position translate="label">
                <required>1</required>
                <visible>1</visible>
                <label>Position</label>

                <type>select</type>
                <values>
                    <title translate="label">
                        <value>title</value>
                        <label>Title</label>
                    </title>
                    <footer translate="label">
                        <value>footer</value>
                        <label>Footer</label>
                    </footer>
                </values>
            </position>
        </parameters>        
    </randomquote>
</widgets> 