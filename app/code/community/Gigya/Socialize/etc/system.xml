        	<groups>
        		<socialize_general_group translate="label comment" module="socialize">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <comment><![CDATA[For help with these settings, please refer to <a href="http://wiki.gigya.com/050_CMS_Modules/050_Magento">Gigya's Developer Documentation</a>.]]></comment>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Use this to enable or disable all aspects of Gigya socialize. Please note that the plugin will ignore this if you do not provide an API key and a secret key below. ]]></comment>
                        </enabled>
                        <api_key translate="label comment">
                            <label>Gigya Socialize API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[In order to enable social optimization, you must first register and setup your account at <a href="http://gigya.com">Gigya</a>.]]></comment>
                        </api_key>
						<secret_key translate="label comment">
                            <label>Gigya Socialize Secret Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secret_key>
						<enabled_providers translate="label comment">
                            <label>Enabled Providers</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
