                        </enabled_providers>
                        <advanced translate="label comment">
                            <label>Advanced Parameters</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Please only use code received from Gigya or you might break your store.]]></comment>
                        </advanced>                        
                    </fields>
	            </socialize_general_group>
        		<socialize_login_group translate="label comment" module="socialize">
                    <label>Login</label>
