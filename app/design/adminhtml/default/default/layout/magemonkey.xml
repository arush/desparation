    <monkey_adminhtml_bulksync_import>
		<reference name="head">
			<action method="addCss"><stylesheet>magemonkey/magemonkey.css</stylesheet></action>
		</reference>
        <reference name="content">
            <block type="monkey/adminhtml_bulksync_import" name="mc_bulksyc_import" />
        </reference>
