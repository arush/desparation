<?xml version="1.0" encoding="UTF-8"?>
<layout>

		<default>
	    	<reference name="head">
   				<block type="socialize/template" name="socialize_script" template="socialize/gigyaheadjs.phtml"/>
   				<action method="addItem"><type>skin_css</type><name>socialize/css/styles.css</name><params/></action>
			</reference>
			<reference name="right">
				<block type="socialize/plugin_recommendations" name="socialize.plugin.Recommendations" template="socialize/plugin/recommendations.phtml" as="socialize_plugin_recommendations">
		        </block>
			</reference>	
		</default>

		<customer_logged_out>
			<reference name="top.links">
	    		<block type="socialize/page_template_links" 
	    			   name="socialize_page_template_links"	>
					<action method="addLink">
						<label>Register for free membership</label>
						<url helper="customer/getRegisterUrl"/>
						<title>Register for free membership</title>
						<prepare/>
						<urlParams/>
						<position>110</position>
						<liParams/>
						<aParams>
							<rel>socialize-register</rel>
						</aParams>
					</action>
				</block>
	        </reference>
		</customer_logged_out>
	
		<customer_account_login>
			<reference name="content">
				<action method="unsetChildren" />
	    		<block type="socialize/customer_form_login" 
	    			   name="socialize_customer_form_login" 
	    			   template="customer/form/login.phtml">
	    			<!--  tell it to use socialize/customer/form/login.phtml if enabled 
     			    <action method="setSocializeTemplate"><t>socialize/customer/form/login.phtml</t></action> -->
     			    <action method="setSocializeTemplate"><t>evogue/customer/form/login.phtml</t></action>
	    			<block type="socialize/plugin_login" 
						   template="socialize/plugin/login.phtml" 
						   name="socialize.plugin.login" 
						   as="socialize_plugin_login">
					</block>
	    		</block>
	    	</reference>
		</customer_account_login>

	<customer_account_create>
		<reference name="content">
    		<block type="socialize/customer_form_create_login" 
    			   name="socialize_customer_form_create_login" 
    			   template="" 
    			   before="--" >
    			<!--  tell it to use socialize/customer/form/create/login.phtml if enabled -->
    			<action method="setSocializeTemplate"><t>socialize/customer/form/create/login.phtml</t></action>
    			<block type="socialize/plugin_login" 
					   template="socialize/plugin/login.phtml" 
					   name="socialize.plugin.login" 
					   as="socialize_plugin_login">
				</block>
    		</block>
			<block type="socialize/textreplacer" 
    			   name="socialize.textreplacer" 
    			   template="socialize/textreplacer.phtml"
    			   as="socialize_textreplacer" 
    			   after="--" >
    			   <action method="setSelector"><t>h1</t></action>
    			   <action method="setTextToReplace"><t>Create an Account</t></action>
    			   <action method="setReplacementText"><t>Or create an Account</t></action>
			</block>
    	</reference>
	</customer_account_create>



    <customer_account_logoutsuccess translate="label">
        <reference name="content">
            <block type="core/template" name="socialize_logout" template="socialize/logout.phtml"/>
        </reference>
    </customer_account_logoutsuccess>

	<catalog_product_view>
       <reference name="product.info.additional">
			<block type="socialize/plugin_comments" 
				   template="socialize/catalog/product/comments.phtml" 
				   name="socialize.catalog.product.comments" 
				   as="socialize_catalog_product_comments">
				<block type="socialize/plugin_comments" 
					   template="socialize/plugin/comments.phtml" 
					   name="socialize.plugin.comments" 
					   as="socialize_plugin_comments">
					   
				</block>
			</block>
        </reference>

        <reference name="content">
        	<block type="socialize/plugin_reactionsBar" name="socialize.plugin.reactionsBar" template="socialize/plugin/reactionsbar.phtml" as="socialize_plugin_reactionsbar">
			</block>
			<block type="socialize/plugin_shareLinks" name="socialize.plugin.shareLinks" template="socialize/plugin/sharelinks.phtml" as="socialize_plugin_sharelinks">
			</block>
        </reference>
            
	</catalog_product_view>
 
	<customer_account_linking translate="label">
        <label>Customer Account Linking Form</label>

        <remove name="right" />
        <remove name="left" />

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>

		<reference name="content">
			<action method="unsetChildren" />
    		<block type="socialize/customer_form_linking" name="socialize_customer_form_linking" template="socialize/customer/form/linking.phtml">
    			<block type="customer/form_register" name="customer_form_register" template="evogue/customer/form/register.phtml"/>
    		</block>
			<block type="socialize/textreplacer" 
    			   name="socialize.textreplacer" 
    			   template="socialize/textreplacer.phtml"
    			   as="socialize_textreplacer" 
    			   after="--" >
    			   <action method="setSelector"><t>h1</t></action>
    			   <action method="setTextToReplace"><t>Create an Account</t></action>
    			   <action method="setReplacementText"><t>Or create an Account</t></action>
			</block>    		
			<block type="socialize/customer_form_create_autoPassword" 
    			   name="socialize.customer.form.create.autoPassword" 
    			   template="socialize/customer/form/create/autopassword.phtml"
    			   as="customer_form_create_autopassword" 
    			   after="--">
			</block>
    	</reference>    	
	</customer_account_linking>

	<socialize_index_index>
		<reference name="root">
			<action method="unsetChildren" />
            <action method="setTemplate"><template>socialize/help.phtml</template></action>
        </reference>
	</socialize_index_index>

 	
</layout>