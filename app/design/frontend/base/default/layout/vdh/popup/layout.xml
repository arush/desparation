<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/vdh/popup/script.js</name></action>
            <action method="addCss"><stylesheet>css/vdh/popup/style.css</stylesheet></action>
            
        </reference>
		<reference name="before_body_end">			
				<block type="core/template" name="popup" template="vdh/popup/script.phtml"/>			
		</reference>
    </default>
    
    <popup_index_index>
    	<remove name="popup" />
    
    	<reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
    	</reference>
    </popup_index_index>

    <popup_index_first>
    	<reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
    	</reference>
    </popup_index_first>
    
    <popup_form_page>
    	<remove name="popup" />
    </popup_form_page>    
</layout>